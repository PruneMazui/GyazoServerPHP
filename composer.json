{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "archive/zf",
                "version": "1.12.3-p1",
                "dist": {
                    "url": "https://packages.zendframework.com/releases/ZendFramework-1.12.3/ZendFramework-1.12.3-minimal.zip",
                    "type": "zip"
                },
                "include-path": [
                    "library"
                ],
                "autoload": {
                    "psr-0": {
                        "Zend_": "library"
                    }
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "archive/smarty",
                "version": "3.1.13",
                "dist": {
                    "url": "http://www.smarty.net/files/Smarty-3.1.13.zip",
                    "type": "zip"
                },
                "autoload": {
                    "classmap": [
                        "libs/Smarty.class.php",
                        "libs/SmartyBC.class.php"
                    ]
                }
            }
        }
    ],
    "autoload": {
        "psr-0": {
            "Zx_" : "app/class"
        }
    },
    "require": {
        "archive/zf": "1.*",
        "archive/smarty": "3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/dbunit": "*",
        "phpunit/phpunit-selenium": "*"
    }
}
